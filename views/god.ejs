<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>diooooo</title>
</head>
<body>
    <h1>god page</h1>
    <input type="text" id="nome" placeholder="nome" autocomplete="off">
    <input type="text" id="piu" placeholder="coin da aggiungere" autocomplete="off">
    <button onclick="add()">aggiungi</button>
    <input type="text" id="meno" placeholder="coin da toglere" autocomplete="off">
    <button onclick="del()">togli</button>
    <button onclick="res()">reset</button>
    <button onclick="admin()">rendi admin</button>
    <p id="msg">tutto a funzionato brooooooooooo</p>

    <script src="https://www.gstatic.com/firebasejs/8.10.0/firebase-app.js"></script>
    <script src="https://www.gstatic.com/firebasejs/8.10.0/firebase-database.js"></script>
   
    <script >
        var data
        const msg = document.getElementById('msg')
        const firebaseConfig = {
            apiKey: "AIzaSyBZReLMy423JAQq9v1SsZl5tqZQzkowd-0",
            authDomain: "big-sito.firebaseapp.com",
            databaseURL: "https://big-sito-default-rtdb.europe-west1.firebasedatabase.app",
            projectId: "big-sito",
            storageBucket: "big-sito.appspot.com",
            messagingSenderId: "111140400866",
            appId: "1:111140400866:web:616765f40fa81b71c2f8bb",
            measurementId: "G-WNJC59Q868"
            };

        // Initialize Firebase
        firebase.initializeApp(firebaseConfig);
        firebase.database().ref().on('value', (snapshot) => {
            data = snapshot.val();
        });
        

        //AGGIUNGI COIN A SCELTA
        function add(){
           var nome = document.getElementById('nome').value
           
           try{
               var cifra = document.getElementById('piu').value
                firebase.database().ref(nome).update({
                    coin: data[nome]['coin']+= parseInt(cifra)
                    
                })
                msg.innerHTML = "t'appost"
            }catch{
                msg.innerHTML = 'riprova'
            }
        }
        // TOGLI COIN A SCELTA
        function del(){
           var nome = document.getElementById('nome').value
           
           try{
               var cifra = document.getElementById('meno').value
                firebase.database().ref(nome).update({
                    coin: data[nome]['coin']-= parseInt(cifra)
                    
                })
                msg.innerHTML = "t'appost"
            }catch{
                msg.innerHTML = 'riprova'
            }
        }

        //ELIMANA I COIN
        function res(){
           var nome = document.getElementById('nome').value
           
           try{
               var cifra = document.getElementById('piu').value
                firebase.database().ref(nome).update({
                    coin: data[nome]['coin']=0
                    
                })
                msg.innerHTML = "t'appost"
            }catch{
                msg.innerHTML = 'riprova'
            }
        }

        //RENDI ADMIN
        function admin(){
           var nome = document.getElementById('nome').value
           
           try{
               firebase.database().ref(nome).update({
                    admin: true
                    
                })
                msg.innerHTML = "t'appost"
            }catch{
                msg.innerHTML = 'riprova'
            }
        }
    </script>
</body>
</html>